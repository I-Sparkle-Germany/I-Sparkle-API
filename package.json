{
  "name": "wise",
  "version": "5.0.0",
  "description": "Web-based Inquiry Science Environment",
  "main": "app.js",
  "dependencies": {
    "compass": "^0.1.1",
    "eslint": "^1.7.3",
    "jspm": "^0.16.19",
    "sass": "^0.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "connect-history-api-fallback": "^1.1.0",
    "node-sass": "^3.4.2"
  },
  "scripts": {
    "watch-all": "npm run transpile & npm run watch-css",
    "transpile": "babel --extensions .es6 --source-maps --presets babel-preset-es2015 --watch src/main/webapp/wise5/ --only wise5/services,wise5/classroomMonitor,wise5/authoringTool,wise5/directives,wise5/components,wise5/vle,wise5/controllers,wise5/node/ --out-dir src/main/webapp/wise5/",
    "watch-css": "npm run watch-core-css & npm run watch-theme-css",
    "watch-core-css": "node-sass -w src/main/webapp/wise5/style -o src/main/webapp/wise5/style",
    "watch-theme-css": "node-sass -w src/main/webapp/wise5/vle/themes -o src/main/webapp/wise5/vle/themes",
    "build-core-css": "node-sass src/main/webapp/wise5/style -o src/main/webapp/wise5/style",
    "build-theme-css": "node-sass src/main/webapp/wise5/vle/themes -o src/main/webapp/wise5/vle/themes",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WISE-Community/WISE.git"
  },
  "keywords": [
    "WISE",
    "education",
    "science",
    "inquiry"
  ],
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/WISE-Community/WISE/issues"
  },
  "homepage": "https://github.com/WISE-Community/WISE#readme",
  "jspm": {
    "dependencies": {
      "jquery": "github:components/jquery@^2.1.4"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
