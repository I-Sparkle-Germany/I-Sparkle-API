#!/bin/bash
export PATH=/usr/local/bin:$PATH
files=$(git diff --cached --name-only | grep '\.js\?$')

# Prevent ESLint help message if no files matched
if [[ $files = "" ]] ; then
  exit 0
fi

failed=0
for file in ${files}; do
  git show :$file | ./node_modules/eslint/bin/eslint.js --stdin --stdin-filename $file
  if [[ $? != 0 ]] ; then
    echo $file
    failed=1
  fi
done;

if [[ $failed != 0 ]] ; then
  echo "ESLint check failed, commit denied"
  exit $failed
fi

updateI18NResult=./node_modules/gulp/bin/gulp.js update-i18n
if [[ $updateI18NResult != 0 ]] ; then
  echo "Aborting commit. Please add the newly updated files to your commit and try again."
  exit $updateI18NResult
fi