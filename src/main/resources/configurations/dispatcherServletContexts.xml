<!-- $Id$ -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util 
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
    http://www.springframework.org/schema/mvc
 	http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/context    
    http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://www.springframework.org/schema/tx 
    http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
 	">

	<!-- registers the DefaultAnnotationHandlerMapping and AnnotationMethodHandlerAdapter 
		beans that are required for Spring MVC to dispatch requests to @Controllers. 
		http://docs.spring.io/spring/docs/3.0.x/spring-framework-reference/html/mvc.html#mvc-annotation-driven -->
	<mvc:annotation-driven />

	<!-- enable the @Controller Spring annotation for defining controllers using 
		annotations -->
	<context:component-scan base-package="org.wise.portal.presentation.web">
		<!-- exclude unit test annotations -->
		<context:exclude-filter type="regex"
			expression=".*?Test.*?" />
	</context:component-scan>

	<!-- Switch locales according to the user's browser -->
	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />

	<!-- Use a default fixed theme -->
	<bean id="themeResolver"
		class="org.springframework.web.servlet.theme.FixedThemeResolver">
		<property name="defaultThemeName" value="default" />
	</bean>

	<!-- this bean with the well known name generates view names for us -->
	<bean id="viewNameTranslator"
		class="org.springframework.web.servlet.view.DefaultRequestToViewNameTranslator" />

	<!-- maps request URLs to view file names -->
	<bean id="urlFilenameViewController"
		class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />

	<bean id="controllerUtil"
		class="org.wise.portal.presentation.web.controllers.ControllerUtil">
		<property name="userService" ref="userService" />
	</bean>

	<!-- Custom controllers -->

	<bean id="submitWorkgroupChangesController"
		class="org.wise.portal.presentation.web.controllers.teacher.management.SubmitWorkgroupChangesController">
		<property name="userService" ref="userService" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
		<property name="groupService" ref="groupService" />
	</bean>

	<bean id="informationController"
		class="org.wise.portal.presentation.web.controllers.InformationController">
		<property name="userService" ref="userService" />
		<property name="runService" ref="runService" />
		<property name="projectService" ref="projectService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>

	<bean id="myClassroomRunsMainController"
		class="org.wise.portal.presentation.web.controllers.teacher.management.MyClassroomRunsMainController">
		<property name="runService" ref="runService" />
		<property name="projectService" ref="projectService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>

	<bean id="myClassroomRunsController"
		class="org.wise.portal.presentation.web.controllers.teacher.management.ClassroomRunListController">
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="runService" ref="runService" />
		<property name="projectService" ref="projectService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
	</bean>

	<bean id="minifyProjectController"
		class="org.wise.portal.presentation.web.controllers.teacher.project.MinifyProjectController">
		<property name="projectService" ref="projectService" />
	</bean>

	<bean id="premadeCommentsController"
		class="org.wise.portal.presentation.web.controllers.teacher.grading.PremadeCommentsController">
		<property name="premadeCommentService" ref="premadeCommentService" />
	</bean>

	<bean id="studentUserDetailsValidator"
		class="org.wise.portal.presentation.validators.StudentUserDetailsValidator" />

	<bean id="teacherUserDetailsValidator"
		class="org.wise.portal.presentation.validators.TeacherUserDetailsValidator" />

	<bean id="teacherAccountFormValidator"
		class="org.wise.portal.presentation.validators.TeacherAccountFormValidator" />

	<bean id="removeStudentFromRunParametersValidator"
		class="org.wise.portal.presentation.validators.teacher.management.RemoveStudentFromRunParametersValidator" />

	<bean id="lostTeacherValidator"
		class="org.wise.portal.presentation.validators.LostTeacherValidator" />

	<bean id="lostPasswordStudentAccountQuestionValidator"
		class="org.wise.portal.presentation.validators.LostPasswordStudentAccountQuestionValidator" />

	<bean id="addprojectparametersValidator"
		class="org.wise.portal.presentation.validators.student.AddProjectParametersValidator" />

	<bean id="findProjectParametersValidator"
		class="org.wise.portal.presentation.validators.FindProjectParametersValidator">
		<property name="projectService" ref="projectService" />
		<property name="userService" ref="userService" />
		<property name="runService" ref="runService" />
	</bean>

	<bean id="lookupUserParametersValidator"
		class="org.wise.portal.presentation.validators.LookupUserParametersValidator" />

	<bean id="studentAccountFormValidator"
		class="org.wise.portal.presentation.validators.StudentAccountFormValidator">
		<property name="runService" ref="runService" />
	</bean>

	<bean id="teamSignInFormValidator"
		class="org.wise.portal.presentation.validators.student.TeamSignInFormValidator">
		<property name="userService" ref="userService" />
		<property name="systemSaltSource" ref="systemSaltSource" />
	</bean>

	<bean id="contactWISEValidator"
		class="org.wise.portal.presentation.validators.general.contactwise.ContactWISEValidator" />

	<bean id="passwordReminderParameters" class="org.wise.portal.domain.impl.PasswordReminderParameters"
		scope="prototype" />

	<bean id="runParameters" class="org.wise.portal.domain.run.impl.RunParameters"
		scope="prototype" />

	<bean id="changePasswordParametersValidator"
		class="org.wise.portal.presentation.validators.ChangePasswordParametersValidator">
		<property name="systemSaltSource" ref="systemSaltSource" />
	</bean>

	<bean id="changeWorkgroupParametersValidator"
		class="org.wise.portal.presentation.validators.teacher.ChangeWorkgroupParametersValidator" />

	<bean id="projectParameters" class="org.wise.portal.domain.project.impl.ProjectParameters" />

	<bean id="addSharedTeacherParameters" class="org.wise.portal.domain.impl.AddSharedTeacherParameters">
	</bean>

	<bean id="projectInfoParameters"
		class="org.wise.portal.domain.project.impl.ProjectInfoParameters" />

	<bean id="changePeriodParametersValidator"
		class="org.wise.portal.presentation.validators.teacher.ChangePeriodParametersValidator" />

	<bean id="analyzeProjectController"
		class="org.wise.portal.presentation.web.controllers.teacher.project.AnalyzeProjectController">
		<property name="projectService" ref="projectService" />
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>


	<bean id="outsideErrorController"
		class="org.wise.portal.presentation.web.controllers.OutsideErrorController">
		<property name="exceptionResolver" ref="exceptionResolver" />
	</bean>

	<bean id="studentDataController" class="org.wise.vle.web.StudentDataController">
		<property name="vleService" ref="vleService" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>

	<bean id="annotationController" class="org.wise.vle.web.VLEAnnotationController">
		<property name="vleService" ref="vleService" />
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
		<property name="runService" ref="runService" />
	</bean>

	<bean id="studentStatusController" class="org.wise.vle.web.StudentStatusController">
		<property name="vleService" ref="vleService" />
	</bean>

	<bean id="runStatusController" class="org.wise.vle.web.RunStatusController">
		<property name="vleService" ref="vleService" />
	</bean>

	<bean id="ideaBasketController" class="org.wise.vle.web.VLEIdeaBasketController">
		<property name="vleService" ref="vleService" />
		<property name="runService" ref="runService" />
	</bean>

	<bean id="getExportController" class="org.wise.vle.web.VLEGetXLS">
		<property name="vleService" ref="vleService" />
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
	</bean>

	<bean id="getSpecialExportController" class="org.wise.vle.web.VLEGetSpecialExport">
		<property name="vleService" ref="vleService" />
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
	</bean>

	<bean id="peerReviewController" class="org.wise.vle.web.VLEPeerReviewController">
		<property name="vleService" ref="vleService" />
		<property name="runService" ref="runService" />
	</bean>

	<bean id="assetManagerController" class="org.wise.vle.utils.AssetManager">
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
	</bean>

	<bean id="credentialManager"
		class="org.wise.portal.presentation.web.controllers.CredentialManager">
		<property name="projectService" ref="projectService" />
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>

	<bean id="routerController"
		class="org.wise.portal.presentation.web.controllers.RouterController">
		<property name="projectService" ref="projectService" />
	</bean>

	<bean id="taggerController"
		class="org.wise.portal.presentation.web.controllers.TaggerController">
		<property name="projectService" ref="projectService" />
	</bean>

	<bean id="searchForStudentUserNameValidator"
		class="org.wise.portal.presentation.validators.SearchForStudentUserNameValidator" />

	<bean id="cRaterController" class="org.wise.vle.web.CRaterController">
		<property name="wiseProperties" ref="wiseProperties" />
	</bean>

	<!-- Specifies where theme properties are located -->
	<bean id="themeSource"
		class="org.springframework.ui.context.support.ResourceBundleThemeSource">
		<property name="basenamePrefix" value="themes/" />
	</bean>

	<!-- JSP with optional JSTL views -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/portal/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:i18n/i18n" />
		<property name="defaultEncoding" value="UTF-8" />
		<property name="fallbackToSystemLocale" value="false" />
	</bean>

	<!-- allows user to change language via ?lang=XX url param -->
	<bean id="localeChangeInterceptor"
		class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
		<property name="paramName" value="lang" />
	</bean>

	<!-- The real exceptions are logged to the tomcat/logs/catalina.out file. 
		Look there if you've got a problem. -->
	<bean id="exceptionResolver"
		class="org.wise.portal.spring.impl.TelsSimpleMappingExceptionResolver">
		<property name="exceptionMappings">
			<props>
				<prop key="java.lang.Exception">errors/friendlyError</prop>
				<prop key="org.acegisecurity.AccessDeniedException">
					errors/securityFriendlyError
				</prop>
				<prop
					key="org.wise.portal.presentation.web.exception.NotAuthorizedException">accessdenied</prop>
			</props>
		</property>
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="mailService" ref="mailService" />
	</bean>

	<bean id="securityUtils" class="org.wise.vle.utils.SecurityUtils">
		<property name="wiseProperties" ref="wiseProperties" />
		<property name="runService" ref="runService" />
		<property name="workgroupService" ref="wiseWorkgroupService" />
	</bean>

	<!-- these are resources that do not need to be backed by controllers and 
		should be handled before looking through the SimpleUrlHandlerMapping mappings -->
	<mvc:resources mapping="/vle/**" location="/vle/" order="1" />
	<mvc:resources mapping="/curriculum/**" location="/curriculum/" order="1" />

	<!-- right now we need to register this twice: one for annotated controllers, and once for simpleurlhandlermapping.
	  In the future, when we no longer need SimpleUrlHanderMapping, we can remove one -->
	<mvc:interceptors>
		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
			<property name="paramName" value="lang"></property>
		</bean>
	</mvc:interceptors>

	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="2"></property>
		<property name="mappings">
			<value>
				/request/info.html=informationController
				/errors/friendlyError.html=urlFilenameViewController
				/router.html=routerController
				/teacher/grading/premadeComments.html=premadeCommentsController
				/teacher/management/updatemyaccount.html=urlFilenameViewController
				/teacher/management/classroomruns.html=myClassroomRunsMainController
				/teacher/management/projectruntabs.html=myClassroomRunsController
				/teacher/management/submitworkgroupchanges.html=submitWorkgroupChangesController
				/forgotaccount/selectaccounttype.html=urlFilenameViewController
				/forgotaccount/teacher/success.html=urlFilenameViewController
				/forgotaccount/teacher/error.html=urlFilenameViewController
				/admin/project/tagger.html=taggerController
				/teacher/projects/analyzeproject.html=analyzeProjectController
				/teacher/projects/minifyproject.html=minifyProjectController
				/studentData.html=studentDataController
				/annotation.html=annotationController
				/studentStatus.html=studentStatusController
				/runStatus.html=runStatusController
				/ideaBasket.html=ideaBasketController
				/errors/outsideerror.html=outsideErrorController
				/authorize.html=credentialManager
				/getExport.html=getExportController
				/getSpecialExport.html=getSpecialExportController
				/peerReview.html=peerReviewController
				/assetManager.html=assetManagerController
				/cRater.html=cRaterController
				/**/*.html=urlFilenameViewController
			</value>
		</property>
		<property name="interceptors">
			<list>
				<ref bean="localeChangeInterceptor" />
			</list>
		</property>
	</bean>

</beans>