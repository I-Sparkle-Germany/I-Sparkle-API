<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!--  specify when hibernate should release JDBC connections -->
        <property name="hibernate.connection.release_mode">after_statement</property>
        <property name="hibernate.auto_close_session">true</property>
        <property name="hibernate.flush_before_completion">true</property>        
        <property name="hibernate.c3p0_acquire_increment">1</property>
        <property name="hibernate.c3p0_idle_test_period">100</property>          <!-- seconds -->        
        <property name="hibernate.c3p0_max_size">100</property>
        <property name="hibernate.c3p0_max_statements">0</property>
        <property name="hibernate.c3p0_min_size">10</property>
        <property name="hibernate.c3p0_timeout">100</property><!-- seconds -->
        
        <property name="dialect">org.wise.portal.util.MySQL5MyISAMDialect</property>
        
        <mapping
            class="org.wise.portal.domain.authentication.impl.StudentUserDetails" />
        <mapping
            class="org.wise.portal.domain.authentication.impl.TeacherUserDetails" />
        <mapping
            class="org.wise.portal.domain.impl.RunImpl" />
        <mapping
            class="org.wise.portal.domain.workgroup.impl.WISEWorkgroupImpl" />
        <mapping
            class="org.wise.portal.domain.impl.ModuleImpl" />
        <mapping
            class="org.wise.portal.domain.impl.UrlModuleImpl" />
        <mapping
            class="org.wise.portal.domain.project.impl.ProjectImpl" />
        <mapping
            class="org.wise.portal.domain.project.impl.ExternalProjectImpl" />
        <mapping
            class="org.wise.portal.domain.project.impl.ProjectCommunicatorImpl" />      
        <mapping
            class="org.wise.portal.domain.project.impl.DIYProjectCommunicatorImpl" />      
        <mapping
            class="org.wise.portal.domain.portal.impl.PortalImpl" />      
        <mapping
        	class="org.wise.portal.domain.premadecomment.impl.PremadeCommentImpl" />
        <mapping
        	class="org.wise.portal.domain.premadecomment.impl.PremadeCommentListImpl" />  
        <mapping
            class="org.wise.portal.domain.newsitem.impl.NewsItemImpl" />      
        <mapping
        	class="org.wise.portal.domain.announcement.impl.AnnouncementImpl"/>
        <mapping
        	class="org.wise.portal.domain.project.impl.ProjectMetadataImpl"/>
        <mapping
        	class="org.wise.portal.domain.message.impl.MessageImpl"/>
        <mapping
        	class="org.wise.portal.domain.message.impl.MessageRecipientImpl"/>
        <mapping
        	class="org.wise.portal.domain.project.impl.TagImpl"/>
        <mapping
        	class="org.wise.portal.domain.portal.impl.PortalStatisticsImpl"/>
		<mapping
        	class="org.wise.portal.domain.attendance.impl.StudentAttendanceImpl"/>
    </session-factory>
</hibernate-configuration>
